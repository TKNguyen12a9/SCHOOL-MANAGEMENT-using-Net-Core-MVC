@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>@User.Identity.Name</strong></a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Admin" asp-controller="Account" asp-action="Logout">
				Logout
				<i class="fas fa-sign-out-alt"></i>
			</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Admin" asp-controller="Account" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="Admin" asp-controller="Account" asp-action="Login">Login</a>
		</li>
	}
</ul>
